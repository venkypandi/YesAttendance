<resources>
    <!-- Base application theme. -->
    <style name="Theme.YesAttendance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/red_alpha</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_bold_14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_bold_16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_bold_18" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_regular_14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_regular_16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_regular_18" parent="TextAppearance.AppCompat">
